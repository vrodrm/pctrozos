extends layout.pug

block content
  .container.h-100.d-flex.align-items-center.justify-content-center
    .col-md-5
      .card.shadow-lg.border-0.rounded-4
        .card-body.p-5
          h2.text-center.fw-bold.mb-4 PCTrozos
          p.text-center.text-muted.mb-4 Inicia sesión para continuar

          if errores
            each error in errores
              .alert.alert-danger.py-2.small= error

          if mensaje
            .alert.alert-success.py-2.small= mensaje

          form(action="/login", method="POST")
            .mb-3
              label.ms-2.form-label(for="username") Nombre de usuario
              input#username.form-control.rounded-pill.px-3(type="text", name="username", placeholder="Tu usuario", value=username, required)
            
            .mb-3
              label.ms-2.form-label(for="password") Contraseña
              input#password.form-control.rounded-pill.px-3(type="password", name="password", placeholder="********", required)

            .d-grid.mt-4
              button.btn.btn-primary.btn-lg.rounded-pill(type="submit") Entrar

          .text-center.mt-4
            p.text-muted.small ¿No tienes cuenta? 
              a.text-decoration-none(href="/register") Regístrate aquí
